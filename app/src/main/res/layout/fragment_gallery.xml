<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity" >
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="fill_parent">

            <com.dityish.apratim2k16.TouchImageView
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:id="@+id/pic1"/>
            <com.dityish.apratim2k16.TouchImageView
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:src="@drawable/call"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:id="@+id/pic2"/>
            <com.dityish.apratim2k16.TouchImageView
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:src="@drawable/call"
                android:id="@+id/pic3"/>
            <com.dityish.apratim2k16.TouchImageView
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:src="@drawable/call"
                android:id="@+id/pic4" />
            <com.dityish.apratim2k16.TouchImageView
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:src="@drawable/call"
                android:id="@+id/pic5" />
            <com.dityish.apratim2k16.TouchImageView
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:src="@drawable/call"
                android:id="@+id/pic6" />
            <com.dityish.apratim2k16.TouchImageView
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:src="@drawable/call"
                android:id="@+id/pic7" />
            <com.dityish.apratim2k16.TouchImageView
                android:layout_width="400dp"
                android:layout_height="fill_parent"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:src="@drawable/call"
                android:id="@+id/pic8" />
        </LinearLayout>
    </HorizontalScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jerryimageView"
        android:src="@drawable/jerryone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jerryimageView2"
        android:src="@drawable/jerrytwo"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/jerryimageView"
        android:layout_alignStart="@+id/jerryimageView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jerryimageView3"
        android:src="@drawable/jerrythree"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jerryimageView4"
        android:src="@drawable/jerryfour"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jerryimageView5"
        android:src="@drawable/jerryfive"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jerryimageView6"
        android:src="@drawable/jerrysix"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jerryimageView7"
        android:src="@drawable/jerryseven"
        android:alpha="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>